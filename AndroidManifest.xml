<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremyhaberman.raingauge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RainGauge"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/RainGaugeTheme" >
        <activity
            android:name=".RainGaugeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name=".WeatherUpdateService"
            android:enabled="true" >
        </service>

        <receiver
            android:name=".WeatherUpdateScheduler"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.jeremyhaberman.raingauge.ACTION_SCHEDULE_LOG_MAINTENANCE" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".provider.RainGaugeProvider"
            android:authorities="com.jeremyhaberman.raingauge.raingaugeprovider" />
    </application>

</manifest>